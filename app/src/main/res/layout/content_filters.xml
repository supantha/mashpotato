<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_filters" tools:context="com.login.seedit.seedit.Filters">

    <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Public"
    android:id="@+id/public_cb"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="80dp"
    android:textSize="22dp"
    android:textColor="#388E3C"
    android:textStyle="bold"
    android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planted For Me"
        android:id="@+id/planted_for_me_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/public_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#D32F2F"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/new_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/planted_for_me_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#2196F3"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/history_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/new_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#C2185B"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funny"
        android:id="@+id/funny_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/history_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#FF5722"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surprise"
        android:id="@+id/surprise_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/funny_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#673AB7"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy"
        android:id="@+id/happy_cb"
        android:textSize="22dp"
        android:checked="false"
        android:layout_below="@+id/surprise_cb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#FFC107"
        android:textStyle="bold"/>


</RelativeLayout>
