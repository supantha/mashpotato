<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="416dp"
        android:layout_height="170dp"
        android:layout_gravity="center">
        <!--card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">-->

        <ImageButton
            android:id="@+id/nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigate"
            android:background="#FFFFFFFF"
            android:layout_above="@+id/textView"
            android:layout_alignRight="@+id/distance"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:id="@+id/liker"
            android:src="@drawable/thumb_up"
            android:background="#FFFFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_marginBottom="26dp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="#616161"
            android:textSize="14dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignBottom="@+id/liker"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="Card Name yellow yellow"
            android:textColor="#616161"
            android:ellipsize="end"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_weight="2.56"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/nav" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="mmmmmmmmmmmmmmmmmmm"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_alignBottom="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="9999"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/liker"
            android:layout_alignTop="@+id/liker"
            android:layout_toRightOf="@+id/liker"
            android:gravity="center_horizontal|bottom" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:background="#000000"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/play"
            android:src="@drawable/next_50"
            android:scaleType="fitXY"
            android:background="#FFFFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp" />

    </RelativeLayout>

</LinearLayout>